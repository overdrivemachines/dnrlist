<%= turbo_frame_tag "edit-guest-modal-container" do %>
<div class="modal fade" id="editGuestModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" data-controller="hello">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Guest</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Form -->
      <%= render "form", guest: @guest %>
    </div>
  </div>
</div>
<% end %>
